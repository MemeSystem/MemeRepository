<Page x:Class="MemeSystem.Pages.Story"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemeSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Story">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Background="#40000000" x:Name="Menu" BorderBrush="#022027">
            <MenuItem x:Name="Popular" Header="популярное" Click="Popular_Click" BorderThickness="0,0,10,0" BorderBrush="#022027" Foreground="#ffffff" FontFamily="Sitka Subheading" FontSize="24" Width="151" Grid.Row="0"/>
            <MenuItem x:Name="ByTag" Header="искать по тегами"  Click="ByTag_Click" BorderThickness="0,0,10,0" BorderBrush="#022027" Foreground="#ffffff" FontFamily="Sitka Subheading" FontSize="24" Width="210" Margin="10,0,0,0" Grid.Row="0"/>
            <MenuItem x:Name="RandomStory" Header="случайная история"  Click="RandomStory_Click" BorderThickness="0,0,10,0" BorderBrush="#022027" Foreground="#ffffff" FontFamily="Sitka Subheading" FontSize="24" Width="233" Grid.Row="0"/>
        </Menu>
    </Grid>
</Page>
